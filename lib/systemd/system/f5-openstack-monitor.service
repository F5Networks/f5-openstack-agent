[Unit]
Description=F5 LBaaSv2 Monitor
After=syslog.target network.target
Requires=network.target

[Service]
User=neutron
ExecStart=/usr/bin/f5-oslbaasv2-monitor --log-file /var/log/neutron/f5-openstack-monitor.log --config-file /etc/neutron/neutron.conf --config-file /etc/neutron/services/f5/f5-openstack-agent.ini
Restart=always

[Install]
WantedBy=multi-user.target
